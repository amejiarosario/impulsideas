<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :short_description %>
    <%= f.input :extended_description %>
    <%= f.input :funding_goal %>
    <%= f.input :funding_duration %>
    <%= f.input :category %>
    <%= f.input :tags %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
