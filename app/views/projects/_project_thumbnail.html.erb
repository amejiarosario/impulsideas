<div id="project_thumbnail">
  <div class="thumbnail" id="<%= project.id %>">
    <!-- <img src="<%#= image %>" alt="project image"> -->
    <div class="caption">
      <h3 id="title"><%= project.title %></h3>
      <p id="description"><%= project.short_description %></p>
      <p>$ <span id="goal"><%= project.funding_goal %></span> en <span id="duration"><%= project.funding_duration %></span> dias</p>

      <% unless project.new_record? %>
        <p><%= link_to 'Ver mas', project, class: 'btn btn-default', role: 'button' %>
        <%= link_to 'Contribuir', new_project_contribution_path(project), class: 'btn btn-primary', role: 'button' %></p>
      <% end %>
    </div>
  </div>
</div>
